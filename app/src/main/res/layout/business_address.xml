<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:src="@drawable/more_vert" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Business Address"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="308dp"
        android:text="State"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.262" />

    <EditText
        android:id="@+id/country_ed"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:hint="country"
        android:inputType="text"
        android:padding="7dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/state_ed"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/input_field"
        android:hint="state"
        android:padding="7dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/country_ed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/country_ed"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:text="District"
        android:id="@+id/district_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/state_ed" />

    <EditText
        android:id="@+id/district_ed"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/input_field"
        android:hint="district"
        android:padding="7dp"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/state_ed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/state_ed"
        app:layout_constraintTop_toBottomOf="@+id/district_txt" />

    <TextView
        android:id="@+id/pin_code_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Pincode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/district_txt"
        app:layout_constraintTop_toBottomOf="@+id/district_ed" />

    <EditText
        android:id="@+id/pincode_ed"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/input_field"
        android:hint="pincode"
        android:padding="7dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/district_ed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/district_ed"
        app:layout_constraintTop_toBottomOf="@+id/pin_code_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Landmark"
        android:id="@+id/landmark_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pin_code_txt"
        app:layout_constraintTop_toBottomOf="@+id/pincode_ed" />

    <EditText
        android:id="@+id/landmark_ed"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:hint="landmark"
        android:padding="7dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/pincode_ed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pincode_ed"
        app:layout_constraintTop_toBottomOf="@+id/landmark_txt" />

    <TextView
        android:id="@+id/shop_address_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Shop no."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/landmark_txt"
        app:layout_constraintTop_toBottomOf="@+id/landmark_ed" />


    <EditText
        android:id="@+id/shop_ed"
        android:layout_width="318dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:hint="shop no."
        android:padding="7dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/landmark_ed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/landmark_ed"
        app:layout_constraintTop_toBottomOf="@+id/shop_address_txt" />

    <Button
        android:id="@+id/business_address_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/blue"
        android:text="Next"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/shop_ed"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="@+id/shop_ed"
        app:layout_constraintTop_toBottomOf="@+id/shop_ed"
        app:layout_constraintVertical_bias="0.314" />


</androidx.constraintlayout.widget.ConstraintLayout>